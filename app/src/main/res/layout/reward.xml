<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/home"
    android:clipToOutline="true"
    android:id="@+id/home">

    <View
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/home"
        app:layout_constraintBottom_toTopOf="@+id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/real_time_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Reward"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:fontFamily="@font/rubik"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/arrow_back"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintVertical_bias="0.414"
        app:textAllCaps="false" />

    <ImageButton
        android:id="@+id/arrow_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ic_back"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="@+id/back"
        app:layout_constraintEnd_toEndOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toTopOf="@+id/back"
        app:layout_constraintVertical_bias="0.4"
        android:onClick="back"/>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/selamat"
            android:layout_width="178dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="118dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="430dp"
            android:gravity="top|center"
            android:text="Selamat!!!"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:fontFamily="@font/rubik_bold" />

        <ImageView
            android:id="@+id/thropy"
            android:layout_width="367dp"
            android:layout_height="274dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="82dp"
            app:srcCompat="@drawable/trophy_perspective_matte_s" />

        <TextView
            android:id="@+id/dapat_diskon_greeting"
            android:layout_width="411dp"
            android:layout_height="33dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="355dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="430dp"
            android:gravity="top|center"
            android:text="Anda mendapatkan diskon"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:fontFamily="@font/rubik_bold" />

        <TextView
            android:id="@+id/limabelaspersen"
            android:layout_width="411dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="380dp"
            android:layout_marginEnd="121dp"
            android:layout_marginBottom="430dp"
            android:gravity="top|center"
            android:text="15%"
            android:textColor="#FFFFFF"
            android:textSize="35sp"
            app:fontFamily="@font/rubik_bold" />

        <Button
            android:id="@+id/klaim"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/button_rounded"
            android:text="Klaim"
            android:textSize="18sp"
            app:backgroundTint="#1778F1"
            app:fontFamily="@font/rubik_bold" />

        <TextView
            android:id="@+id/terusberpartisipasi"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="500dp"
            android:gravity="top|center"
            android:text="Terus berpartisipasi dalam mengurangi jumlah kendaraan
            Mari kita jaga lingkungan! " />

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/next"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center"
        app:cardBackgroundColor="@color/bar"
        app:cardCornerRadius="40dp"
        app:cardElevation="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        android:onClick="next" >

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>